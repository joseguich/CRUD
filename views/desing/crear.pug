extends ../layouts/index

block contenido

   div(class="bg-gray-800 shadow-lg max-w-4xl mx-auto rounded-b-3xl")
      h1(class="text-center text-white bg-indigo-600 rounded-xl shadow-lg shadow-indigo-400 hover:rotate-1 transition-all duration-500 font-bold py-2 md:py-5 md:text-2xl ")=pagina

      form(action="/desing/crear" method="POST" class="space-y-8 mt-5")
        div.m-2.space-y-5
          div.mx-5 
            label(for="titulo" class="text-white text-sm md:text-xl font-bold") Titulo 
            input(name="titulo" id="titulo" type="text" class="bg-gray-700 w-full py-2 focus:placeholder-gray-300 focus:outline-gray-300 outline-none px-2 my-2 text-white font-semibold text-sm md:text-base rounded-lg" placeholder="Titulo de la publicación") 
          div.mx-5 
            label(for="descripcion" class="text-white text-sm md:text-xl font-bold") Descripción 
            textarea(name="descripcion" class="bg-gray-700 w-full py-2 focus:placeholder-gray-300 focus:outline-gray-300 outline-none px-2 my-2 text-white font-semibold text-sm md:text-base rounded-lg" placeholder="Descripción de la publicación......" )

          div.mx-5 
            label(for="imagen" class="text-white text-sm md:text-xl font-bold")  Subir Imagen 
            input(name="imagen" id="imagen" type="file" class="bg-gray-700 w-full py-4 focus:placeholder-gray-300 focus:outline-gray-300 outline-none px-2 my-2 text-white font-semibold text-sm md:text-base rounded-lg")
          div.mx-5
            input(type="submit" class="text-white shadow-lg hover:shadow-indigo-400 hover:rotate-1 transition-all duration-500 my-5 font-bold md:text-base text-sm bg-gray-700 p-2 rounded-lg w-full cursor-pointer hover:bg-gray-800" value="Crear Publicación") 
            
        

